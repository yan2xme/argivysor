# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Define the path to the Flutter SDK
flutter_root = File.expand_path(File.join('..', '..', 'flutter'))

# Ensure Flutter is available
unless File.exist?(File.join(flutter_root, 'bin', 'flutter'))
  raise "Flutter SDK not found at #{flutter_root}. Please ensure Flutter is installed."
end

# Load Flutter's Pod helper
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

target 'Runner' do
  # Enables static linking to resolve module issues
  use_frameworks! :linkage => :static

  # Integrate Flutter dependencies
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Prevents embedding Flutter frameworks multiple times
  flutter_post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
  end
end

# Post-install processing for additional settings
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
